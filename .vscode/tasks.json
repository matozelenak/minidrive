{
  "version": "2.0.0",
  "tasks": [
    {
      "detail": "Configure the project using CMake",
      "label": "project-configure",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "problemMatcher": []
    },
    {
      "detail": "Build the project using CMake",
      "label": "project-build",
      "type": "shell",
      "command": "cmake --build build -- -j$(nproc)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "detail": "Run client",
      "label": "run-client",
      "type": "shell",
      "command": "./build/client/client ${MINIDRIVE_USERNAME:+$MINIDRIVE_USERNAME@}${MINIDRIVE_HOST:-127.0.0.1}:${MINIDRIVE_PORT:-9000}",
      "problemMatcher": [],
      "dependsOn": ["project-build"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "detail": "Run server",
      "label": "run-server",
      "type": "shell",
      "command": "./build/server/server --port ${MINIDRIVE_PORT:-9000} --root data/server_root",
      "dependsOn": ["project-build"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": []
    }
    ,
    {
      "detail": "Terminate server with SIGTERM",
      "label": "terminate-server",
      "type": "shell",
      "command": "bash -c 'PID=$(pgrep -x server || ps -eo pid,comm | awk \"/server$/ {print $1}\" | head -n1); if [ -n \"$PID\" ]; then echo Sending SIGTERM to $PID; kill -TERM $PID; else echo \"No server process found\"; fi'",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    }
  ]
}