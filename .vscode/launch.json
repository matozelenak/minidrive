{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/server/server",
      "args": ["--port", "${env:MINIDRIVE_PORT}", "--root", "${workspaceFolder}/data/server_root"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "project-build"
    },
    {
      "name": "Debug Client",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/client/client",
      "args": ["${env:MINIDRIVE_USERNAME}${env:MINIDRIVE_USERNAME:+@}${env:MINIDRIVE_HOST}:${env:MINIDRIVE_PORT}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "project-build"
    }
  ]
}